@model GadgetHub.WebUI.Models.ProductListViewModel

@{
	ViewBag.Title = "Products";
}

@foreach (var p in Model.Products)
{
	<div>
		<h3>Name = @p.Name</h3>
		<h4>Brand = @p.Brand</h4>
		<h4>Price = @p.Price.ToString("c")</h4>
		<h4>Desc = @p.Description</h4>
		<h4>Category = @p.Category</h4>
		<p>===============</p>
	</div>
}

<div>
	@Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x }))
</div>